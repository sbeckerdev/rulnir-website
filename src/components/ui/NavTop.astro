---
 
import { Icon } from "astro-icon/components";
const menu = [
  {
    name: "Home",
    href: "/",
    current: true,
  },
  {
    name: "Features",
    href: "/feactures",
    current: false,
  },
  {
    name: "About",
    href: "#",
    current: false,
  },
  {
    name: "Pricing",
    href: "#",
    current: false,
  },
  {
    name: "Modules",
    href: "#",
    current: false,
  },
  {
    name: "Contact Us",
    href: "#",
    current: false,
  },
];
---
 
<header  }>
  <nav
    class="bg-navbar-50 border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-navbar-950"
  >
    <div
      class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
    >
      <a href="#" class="flex items-center">
        <Icon name="lucide:command" class="w-4 h-4 mr-1 dark:text-white" />

        <span
          class="self-center text-xl font-semibold whitespace-nowrap dark:text-white"
        >
          Rulnir</span
        >
      </a>
      <div class="flex items-center lg:order-2">
 <div class="relative inline-block rounded-2xl group p-[1px]">
  <!-- Gradient border layer -->
  <div
    class="absolute inset-0 rounded-2xl bg-gradient-to-r from-blue-500 to-purple-500
           transition-opacity duration-300 group-hover:opacity-0"
  ></div>

  <!-- White background layer -->
  <div
    class="absolute inset-0 rounded-2xl bg-white opacity-0
           transition-opacity duration-300 group-hover:opacity-100"
  ></div>

  <!-- Button -->
  <button
    class="relative bg-[#030303] text-white rounded-2xl px-4 py-1 text-lg font-medium z-10"
  >
   Buy Now
  </button>
</div>
<div class="absolute inset-0 rounded-3xl border-2 border-white opacity-0 pointer-events-none transition-opacity duration-500 group-hover:opacity-100"></div>

        <button
          data-collapse-toggle="mobile-menu-2"
          type="button"
          class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
          aria-controls="mobile-menu-2"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
              clip-rule="evenodd"></path></svg
          >
          <svg
            class="hidden w-6 h-6"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"></path></svg
          >
        </button>
      </div>
      <div
        class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1"
        id="mobile-menu-2"
      >
        <ul
          class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0"
        >
          {
            menu.map((item) => (
              <li class="relative group">
                <a 
                  href={item.href}
                  class="block py-2 pr-4 pl-3 text-white rounded bg-primary-700 lg:bg-transparent lg:text-primary-700 lg:p-0 dark:text-white"
                >
                  {item.name}
                </a>
                <span
                  class="absolute left-0 bottom-0 h-0.5 w-full bg-neutral-500
               scale-x-0 opacity-0 origin-left
               group-hover:scale-x-100 group-hover:opacity-100
               transition-transform duration-300 ease-in-out"
                />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>
 